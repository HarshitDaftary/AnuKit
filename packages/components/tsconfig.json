{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@optimui/utils": ["../utils/dist/index.d.ts"],
      "@optimui/utils/*": ["../utils/dist/*.d.ts"],
      "@optimui/core": ["../core/dist/index.d.ts"],
      "@optimui/core/*": ["../core/dist/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    // Exclude tests from build/type emission
    "src/__tests__/**",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__/**",
    "src/**/tests/**"
  ]
}