{
  "name": "@optimui/utils",
  "version": "0.1.0",
  "description": "Utility functions for OptimUI components",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./sizeMode": {
      "import": "./dist/sizeMode.esm.js",
      "require": "./dist/sizeMode.js",
      "types": "./dist/sizeMode.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "dev": "rollup -c rollup.config.js --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "size": "bundlesize"
  },
  "dependencies": {
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.31",
    "react": "^18.2.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "5KB"
    }
  ]
}